{
  "name": "vlop-bot",
  "version": "0.01",
  "description": "VLOP Telegram Bot for searching and watching movies and TV shows",
  "main": "vlop/index.js",
  "bin": {
    "vlop": "./vlop/cli.js",
    "vlop-bot": "./vlop/cli.js"
  },
  "scripts": {
    "start": "node vlop/index.js",
    "start:render": "node vlop/index.js",
    "dev": "nodemon vlop/index.js",
    "build": "echo 'Building VLOP Bot'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "node vlop/deploy.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
